<h1>タスク一覧</h1>
<ul>
  <% @tasks.each do |task| %>
    <% if task.is_display == true %>
      <li>
        <% if task.status == "draft" %>
          <%= link_to task.title, task_path(task), class: "red" %>
        <% elsif task.status == "published" %>
          <%= link_to task.title, task_path(task), class: "blue" %>
        <% elsif task.status == "archieved" %>
          <%= link_to task.title, task_path(task), class: "green" %>
        <% end %>
        <%= task.created_at.strftime('%Y年%m月%d日') %>
      </li>
    <% end %>
  <% end %>
</ul>
<%= link_to "出品する", new_task_path %>
<%= link_to "非表示一覧", "/tasks/hide" %>

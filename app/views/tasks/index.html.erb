<h1>タスク一覧</h1>
<ul>
  <% @tasks.each do |task| %>
    <% if task.is_display == true %>
      <li>
          <%= link_to task.title, task_path(task), class: "#{task.status}" %>
        <%= task.created_at.strftime('%Y年%m月%d日') %>
      </li>
    <% end %>
  <% end %>
</ul>
<%= link_to "出品する", new_task_path %>
<%= link_to "非表示一覧", tasks_hide_path %>
